        +String id
        +String name
        +String email
        +String role
        +login()
        +logout()
    }

    class Admin {
        +createPost()
        +editPost()
        +deletePost()
        +manageUsers()
    }

    class Post {
        +String id
        +String title
        +String content
        +Date datePosted
        +Boolean isVisible
